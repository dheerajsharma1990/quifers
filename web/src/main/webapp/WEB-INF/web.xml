<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app>

        <listener>
                <listener-class>com.quifers.listener.StartupContextListener</listener-class>
        </listener>


        <filter>
                <filter-name>adminAuthenticationFilter</filter-name>
                <filter-class>com.quifers.servlet.filters.AdminAuthenticationFilter</filter-class>
        </filter>

        <servlet>
                <servlet-name>orderServlet</servlet-name>
                <servlet-class>com.quifers.servlet.OrderServlet</servlet-class>
        </servlet>

        <servlet>
                <servlet-name>adminRegisterServlet</servlet-name>
                <servlet-class>com.quifers.servlet.admin.AdminRegisterServlet</servlet-class>
        </servlet>

        <servlet>
                <servlet-name>adminLoginServlet</servlet-name>
                <servlet-class>com.quifers.servlet.admin.AdminLoginServlet</servlet-class>
        </servlet>

        <servlet>
                <servlet-name>adminServlet</servlet-name>
                <servlet-class>com.quifers.servlet.admin.FieldExecutiveListAllServlet</servlet-class>
        </servlet>

        <servlet>
                <servlet-name>fieldExecutiveAssignServlet</servlet-name>
                <servlet-class>com.quifers.servlet.admin.FieldExecutiveAssignServlet</servlet-class>
        </servlet>

        <servlet>
                <servlet-name>fieldExecutiveRegisterServlet</servlet-name>
                <servlet-class>com.quifers.servlet.admin.FieldExecutiveRegisterServlet</servlet-class>
        </servlet>


        <filter-mapping>
                <filter-name>adminAuthenticationFilter</filter-name>
                <url-pattern>/api/v0/admin/*</url-pattern>
                <dispatcher>REQUEST</dispatcher>
        </filter-mapping>

        <servlet-mapping>
                <servlet-name>orderServlet</servlet-name>
                <url-pattern>/api/v0/guest/order/*</url-pattern>
        </servlet-mapping>

        <servlet-mapping>
                <servlet-name>adminRegisterServlet</servlet-name>
                <url-pattern>/api/v0/guest/admin/register</url-pattern>
        </servlet-mapping>

        <servlet-mapping>
                <servlet-name>adminLoginServlet</servlet-name>
                <url-pattern>/api/v0/guest/admin/login</url-pattern>
        </servlet-mapping>

        <servlet-mapping>
                <servlet-name>adminServlet</servlet-name>
                <url-pattern>/api/v0/admin/executives/listAll</url-pattern>
        </servlet-mapping>

        <servlet-mapping>
                <servlet-name>fieldExecutiveAssignServlet</servlet-name>
                <url-pattern>/api/v0/admin/executives/assign</url-pattern>
        </servlet-mapping>

        <servlet-mapping>
                <servlet-name>fieldExecutiveRegisterServlet</servlet-name>
                <url-pattern>/api/v0/admin/executives/register</url-pattern>
        </servlet-mapping>


</web-app>