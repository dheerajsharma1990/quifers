<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app>

        <listener>
                <listener-class>com.quifers.listener.StartupContextListener</listener-class>
        </listener>

        <servlet>
                <servlet-name>fieldManagerRegisterServlet</servlet-name>
                <servlet-class>com.quifers.servlet.FieldManagerRegisterServlet</servlet-class>
        </servlet>

        <servlet>
                <servlet-name>orderServlet</servlet-name>
                <servlet-class>com.quifers.servlet.OrderServlet</servlet-class>
        </servlet>

        <servlet>
                <servlet-name>assignFieldManagerServlet</servlet-name>
                <servlet-class>com.quifers.servlet.AssignOrderToFieldManagerServlet</servlet-class>
        </servlet>


        <servlet-mapping>
                <servlet-name>fieldManagerRegisterServlet</servlet-name>
                <url-pattern>/registerFieldManager</url-pattern>
        </servlet-mapping>

        <servlet-mapping>
                <servlet-name>orderServlet</servlet-name>
                <url-pattern>/bookOrder</url-pattern>
        </servlet-mapping>

        <servlet-mapping>
                <servlet-name>assignFieldManagerServlet</servlet-name>
                <url-pattern>/assignFieldManager</url-pattern>
        </servlet-mapping>

</web-app>