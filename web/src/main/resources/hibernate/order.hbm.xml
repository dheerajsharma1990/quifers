<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.quifers.domain.Order" table="orders">
        <id name="orderId" type="java.lang.Long">
            <column name="order_id"/>
        </id>

        <property name="name" type="string">
            <column name="name"/>
        </property>

        <property name="mobileNumber" type="java.lang.Long">
            <column name="mobile_number"/>
        </property>

        <property name="email" type="string">
            <column name="email"/>
        </property>

        <property name="vehicle" type="string">
            <column name="vehicle"/>
        </property>

        <property name="fromAddressHouseNumber" type="string">
            <column name="from_address_house_number"/>
        </property>

        <property name="fromAddressSociety" type="string">
            <column name="from_address_society"/>
        </property>

        <property name="fromAddressArea" type="string">
            <column name="from_address_area"/>
        </property>

        <property name="fromAddressCity" type="string">
            <column name="from_address_city"/>
        </property>

        <property name="toAddressHouseNumber" type="string">
            <column name="to_address_house_number"/>
        </property>

        <property name="toAddressSociety" type="string">
            <column name="to_address_society"/>
        </property>

        <property name="toAddressArea" type="string">
            <column name="to_address_area"/>
        </property>

        <property name="toAddressCity" type="string">
            <column name="to_address_city"/>
        </property>

        <property name="labours" type="integer">
            <column name="labours" />
        </property>

        <property name="estimate" type="string">
            <column name="estimate" />
        </property>

        <property name="distance" type="string">
            <column name="distance" />
        </property>

        <property name="pickupFloors" type="integer">
            <column name="pick_up_floors" />
        </property>

        <property name="pickupLiftWorking" type="boolean">
            <column name="pick_up_lift_working" />
        </property>

        <property name="dropOffFloors" type="integer">
            <column name="drop_off_floors" />
        </property>

        <property name="dropOffLiftWorking" type="boolean">
            <column name="drop_off_lift_working" />
        </property>

        <many-to-one name="fieldExecutive" class="com.quifers.domain.FieldExecutive" column="field_executive_id" cascade="all" lazy="false" fetch="select" />

        <set name="orderWorkflows" table="orders_workflow" inverse="true" lazy="false" fetch="select">
            <key>
                <column name="order_id" not-null="true"/>
            </key>
            <one-to-many class="com.quifers.domain.OrderWorkflow"/>
        </set>
    </class>
</hibernate-mapping>