<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.quifers.domain.Order" table="orders">
        <id name="orderId" type="java.lang.Long">
            <column name="order_id"/>
        </id>
        <property name="name" type="string">
            <column name="name" length="255"/>
        </property>
        <property name="mobileNumber" type="java.lang.Long">
            <column name="mobile_number"/>
        </property>
        <set name="orderWorkflows" table="orders_workflow" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="order_id" not-null="true"/>
            </key>
            <one-to-many class="com.quifers.domain.OrderWorkflow"/>
        </set>
    </class>
</hibernate-mapping>