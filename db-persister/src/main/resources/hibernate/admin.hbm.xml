<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.quifers.domain.Admin" table="admin">
        <id name="userId" type="java.lang.String">
            <column name="user_id"/>
            <generator class="foreign">
                <param name="property">account</param>
            </generator>
        </id>
        <property name="name" type="string">
            <column name="name" length="255"/>
        </property>
        <property name="mobileNumber" type="java.lang.Long">
            <column name="mobile_number"/>
        </property>
        <one-to-one name="account" class="com.quifers.domain.AdminAccount" cascade="save-update" constrained="true" lazy="false" fetch="select"/>
    </class>
</hibernate-mapping>